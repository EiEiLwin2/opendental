<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="WebHostSynch.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    </sectionGroup>
  </configSections>
  <appSettings>
    <add key="LogFile" value="F:\temp\WebLogs\WebHostSynch.log" /><!--Dennis: this is found here rather than in the settings section because I had trouble while debugging. It would pick the value from the Webforms setting rather than form the settings of Webhostsynch-->
    <add key="LogErr" value="yes" /><!--any value other than yes is considered no-->
    <add key="LogInfo" value="yes" /><!--any value other than yes is considered no-->
  </appSettings>
  <connectionStrings>
    <add name="DBRegKey" connectionString="Server=localhost;Database=opendental73;User ID=root;Password=;CharSet=utf8" />
    <add name="ODWebServiceEntities" connectionString="metadata=res://*/ODWebServiceModel.csdl|res://*/ODWebServiceModel.ssdl|res://*/ODWebServiceModel.msl;provider=MySql.Data.MySqlClient;provider connection string=&quot;server=localhost;User Id=root;Persist Security Info=True;database=odwebservice&quot;"
      providerName="System.Data.EntityClient" />
    <add name="WebHostSynch.Properties.Settings.DBMobileWeb" connectionString="server=localhost;User Id=root;database=mobile_dev;Persist Security Info=True" />
  </connectionStrings>
  <system.web>
    <httpRuntime maxRequestLength="25000" /><!--The figure is in KB. It appears that for an upload size with an 1MB image attached to the sheet the figure has to be 21000. The current figure of 25000 can support an image of size 4MB attached to the sheet.-->
    
    <!-- 
            Set compilation debug="true" to insert debugging 
            symbols into the compiled page. Because this 
            affects performance, set this value to true only 
            during development.
        -->
    <compilation debug="true" targetFramework="4.0">
      <assemblies>
        <add assembly="System.Data.Entity, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
      </assemblies>
    </compilation>
    <!--
            The <authentication> section enables configuration 
            of the security authentication mode used by 
            ASP.NET to identify an incoming user. 
        -->
    <authentication mode="Windows" />
    <!--
            The <customErrors> section enables configuration 
            of what to do if/when an unhandled error occurs 
            during the execution of a request. Specifically, 
            it enables developers to configure html error pages 
            to be displayed in place of a error stack trace.

        <customErrors mode="RemoteOnly" defaultRedirect="GenericErrorPage.htm">
            <error statusCode="403" redirect="NoAccess.htm" />
            <error statusCode="404" redirect="FileNotFound.htm" />
        </customErrors>
        -->
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID" />
  </system.web>
  <!-- 
        The system.webServer section is required for running ASP.NET AJAX under Internet
        Information Services 7.0.  It is not necessary for previous version of IIS.
    -->
  <applicationSettings>
    <WebHostSynch.Properties.Settings>
      <setting name="SheetDefAddress" serializeAs="String">
        <value>http://localhost:2330/Sheets.aspx</value>
      </setting>
      <setting name="PatientPortalAddress" serializeAs="String">
        <value>http://localhost:2193/Login.aspx</value>
      </setting>
    </WebHostSynch.Properties.Settings>
  </applicationSettings>
</configuration>