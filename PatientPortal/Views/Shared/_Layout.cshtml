<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1></h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogInPartial")
            </div>
			@if(Session["Patient"]!=null) {
				<div id="menucontainer">
					<ul id="menu">
						<li>@Html.ActionLink("Family","FamilyInformation","Family")</li>
						<li>@Html.ActionLink("Account","AccountView","Account")</li>
						<li>@Html.ActionLink("Medical","EHRInformation","Medical")</li>
					</ul>
				</div>
			}
        </div>
        <div id="main">
		@*<p><strong>Patient Name:</strong> @Model.patm.LName , @Model.patm.FName </p>*@
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
