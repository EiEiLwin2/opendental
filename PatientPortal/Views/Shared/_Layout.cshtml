<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="patname">
                @Html.Partial("_PatientName")
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogInPartial")
            </div>
			@if(Session["Patient"]!=null) {
	   string styleFamily="";
	   string styleAccount="";
	   string styleMedical="";
	   if(HttpContext.Current.Request.Path == "/Family/FamilyInformation") {
		   styleFamily="highlight";
	   }
	   if(HttpContext.Current.Request.Path == "/Account/AccountInformation") {
		   styleAccount="highlight";
	   }
	   if(HttpContext.Current.Request.Path == "/Medical/EHRInformation") {
		   styleMedical="highlight";
	   }

				<div id="menucontainer">
					<ul id="menu">
						<li>@Html.ActionLink("Family","FamilyInformation","Family",new object { },new { @class=styleFamily })</li>
						<li>@Html.ActionLink("Account","AccountInformation","Account",new object { },new { @class=styleAccount })</li>
						<li>@Html.ActionLink("Medical","EHRInformation","Medical",new object { },new { @class=styleMedical })</li>
					</ul>
				</div>
			}
        </div>
        <div id="main">
		
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
