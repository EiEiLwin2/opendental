<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" >
  
  <g:DockLayoutPanel unit='PT'>
  	<!-- Log off button that will be in the top right of the page.. -->
  	<g:north size="20">
  		<g:SimplePanel>
  			<g:Button ui:field="butLogOff">Log Off</g:Button>
  		</g:SimplePanel>
  	</g:north>
  	<!-- Title bar that contains the selected patient information. -->
    <g:north size='12'>
    	<g:HorizontalPanel>
    		<g:Label>Patient Name: </g:Label>
    		<g:Label ui:field="labelPatName" />
    	</g:HorizontalPanel>
    </g:north>
    <g:center>
    	<g:TabPanel ui:field="tabMain">
				<g:Tab ui:field="tabFamily" text="Family">
					<g:SimplePanel ui:field="panelFamily" />
				</g:Tab>
				<g:Tab ui:field="tabAccount" text="Account">
					<g:SimplePanel ui:field="panelAccount" />
				</g:Tab>
				<g:Tab text="Medical">
					<g:SimplePanel ui:field="panelMedical" />
				</g:Tab>
			</g:TabPanel>
    </g:center>
  </g:DockLayoutPanel>
  
</ui:UiBinder>