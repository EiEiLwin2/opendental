<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" >
  
  <ui:style type="com.opendental.patientportal.client.tabs.TabMedical.GridStyle">
  	.grid {
			border: 1px solid #000000;
			border-collapse: collapse;
			margin: 10px;
		}
  
  	.grid td {
			padding: 5px;
			border: 1px solid #000000;
		}
  </ui:style>
  
  <g:VerticalPanel ui:field="panelContainer">
  	<g:Label>Lab Panel:</g:Label>
  	<g:VerticalPanel>
  		<g:Label ui:field="labelPanels">No lab panels found.</g:Label>
  		<g:Grid ui:field="gridPanels" styleName="{style.grid}" />
  	</g:VerticalPanel>
  	<g:Label>List of Medications:</g:Label>
  	<g:VerticalPanel>
  		<g:Label ui:field="labelMedications">No lab medications found.</g:Label>
  		<g:Grid ui:field="gridMedications" styleName="{style.grid}" />
  	</g:VerticalPanel>
  	<g:Label>List of Problems:</g:Label>
  	<g:VerticalPanel>
  		<g:Label ui:field="labelProblems">No lab problems found.</g:Label>
  		<g:Grid ui:field="gridProblems" styleName="{style.grid}" />
  	</g:VerticalPanel>
  	<g:Label>List of Allergies:</g:Label>
  	<g:VerticalPanel>
  		<g:Label ui:field="labelAllergies">No lab allergies found.</g:Label>
  		<g:Grid ui:field="gridAllergies" styleName="{style.grid}" />
  	</g:VerticalPanel>
  </g:VerticalPanel>
  
</ui:UiBinder>