<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" >
  
  <ui:style>
  	.grid {
			border: 1px solid #000000;
			border-collapse: collapse;
			margin: 10px;
		}
  
  	.grid td {
			padding: 5px;
			border: 1px solid #000000;
		}
  </ui:style>
  
  <g:VerticalPanel ui:field="panelContainer">
  	<g:Grid ui:field="gridAccount" styleName="{style.grid}" />
  	<g:Label>Statement History:</g:Label>
  	<g:Label ui:field="labelStatements">No statements found.</g:Label>
  	<g:Grid ui:field="gridStatements" styleName="{style.grid}" />
  </g:VerticalPanel>
  
</ui:UiBinder>