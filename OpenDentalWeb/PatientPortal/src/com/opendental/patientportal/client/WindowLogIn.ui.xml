<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" >
  
  <g:SimpleLayoutPanel>
  	<g:VerticalPanel>
  		<g:Label>Log In</g:Label>
  		<g:DecoratorPanel>
  			<g:VerticalPanel>
  				<g:Label>User name</g:Label>
  				<g:HorizontalPanel>
  					<g:TextBox ui:field="textUserName" />
  					<g:Label ui:field="labelUserName" visible="false">The User name field is required.</g:Label>
  				</g:HorizontalPanel>
  				<g:Label>Password</g:Label>
  				<g:HorizontalPanel>
  					<g:PasswordTextBox ui:field="textPassword" />
  					<g:Label ui:field="labelPassword" visible="false">The Password field is required.</g:Label>
  				</g:HorizontalPanel>
  				<g:Label ui:field="labelLogIn" visible="false">Login failed, please try again.</g:Label>
  				<g:Button ui:field="butLogIn">Log In</g:Button>
  			</g:VerticalPanel>
  		</g:DecoratorPanel>
  	</g:VerticalPanel>
  </g:SimpleLayoutPanel>
  
</ui:UiBinder>