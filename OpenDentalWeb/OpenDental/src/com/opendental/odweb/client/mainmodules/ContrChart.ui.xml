<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:odgrid="urn:import:com.opendental.odweb.client.ui">
	
	<g:SimplePanel ui:field="panelContainer">
		<g:DockPanel>
			<g:Dock direction="NORTH">
				<!-- OD tool bar goes here. -->
				<g:SimplePanel></g:SimplePanel>
			</g:Dock>
			<g:Dock direction="CENTER">
				<g:DockPanel>
					<g:Dock direction="WEST">
						<g:SimplePanel width="100px" height="100px">
							<g:Label>Picture of OD Tooth Chart here.</g:Label>
						</g:SimplePanel>
					</g:Dock>
					<g:Dock direction="CENTER">
						<g:VerticalPanel>
							<g:TabPanel ui:field="tabProc" width="100%">
								<g:Tab text="Enter Treatment">
									<g:VerticalPanel>
										<g:Button ui:field="butAddProc">Procedure List</g:Button>
									</g:VerticalPanel>
								</g:Tab>
							</g:TabPanel>
							<odgrid:ODGrid ui:field="gridProg" />
						</g:VerticalPanel>
					</g:Dock>
				</g:DockPanel>
			</g:Dock>
		</g:DockPanel>
	</g:SimplePanel>
	
</ui:UiBinder>