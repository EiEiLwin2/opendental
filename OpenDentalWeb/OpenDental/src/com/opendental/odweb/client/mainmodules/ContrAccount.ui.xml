<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:odgrid="urn:import:com.opendental.odweb.client.ui">
  
  <ui:style>
  
  	.labelUrgFinNote {
			font-weight: bold;
		}
  
  </ui:style>
	
	<g:SimplePanel ui:field="panelContainer">
		<g:DockPanel>
			<g:Dock direction="NORTH">
				<!-- OD tool bar will just be buttons for now. -->
				<g:HorizontalPanel>
					<g:Button ui:field="butPayment">Payment</g:Button>
					<g:Button ui:field="butAdj">Adjustment</g:Button>
				</g:HorizontalPanel>
			</g:Dock>
			<g:Dock direction="CENTER">
				<g:VerticalPanel>
					<odgrid:ODGrid ui:field="gridAccount"/>
				</g:VerticalPanel>
			</g:Dock>
			<g:Dock direction="EAST">
				<g:VerticalPanel>
					<g:TabPanel ui:field="tabControlShow">
						<g:Tab text="Main">
							<g:VerticalPanel>
								<g:Label ui:field="labelUrgFinNote">Fam Urgent Fin Note</g:Label>
								<g:TextBox ui:field="textUrgFinNote" width="170px" height="75px" />
								<odgrid:ODGrid ui:field="gridAcctPat" />
								<g:Label ui:field="labelFamFinancial">Family Financial Notes</g:Label>
								<g:TextBox ui:field="textFinNotes" width="170px" height="85px" />
							</g:VerticalPanel>
						</g:Tab>
					</g:TabPanel>
				</g:VerticalPanel>
			</g:Dock>
		</g:DockPanel>
	</g:SimplePanel>
	
</ui:UiBinder>