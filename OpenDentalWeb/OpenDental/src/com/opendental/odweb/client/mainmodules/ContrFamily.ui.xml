<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:odgrid="urn:import:com.opendental.odweb.client.ui">
	
	<g:SimplePanel ui:field="panelContainer">
		<g:DockPanel>
			<g:Dock direction="NORTH">
				<g:VerticalPanel>
					<!-- OD tool bar will just be buttons for now. -->
					<g:HorizontalPanel>
						<g:Button ui:field="butAdd">Add</g:Button>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<odgrid:ODGrid ui:field="gridFamily"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:Dock>
			<g:Dock direction="CENTER">
				<odgrid:ODGrid ui:field="gridPat"/>
			</g:Dock>
		</g:DockPanel>
	</g:SimplePanel>
	
</ui:UiBinder>