<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
  	
	<g:SimplePanel ui:field="panelContainer" >
		<g:DockPanel>
			<g:Dock direction="CENTER">
				<!-- Put the appointment schedule here. -->
				<g:SimplePanel ui:field="panelSchedule">
					<g:Image ui:field="imageApptSched" />
				</g:SimplePanel>
			</g:Dock>
			<g:Dock direction="EAST" size="300">
				<!-- Put the calendar and other searching tools here. -->
				<g:VerticalPanel>
					<dp:DatePicker ui:field="calendar" />
					<g:SimplePanel>
						<g:Label ui:field="pinBoard">PinBoard</g:Label>
					</g:SimplePanel>
					<g:Button ui:field="butMakeAppt">Make Appt</g:Button>
					<g:Button ui:field="butDelete">Delete</g:Button>
				</g:VerticalPanel>
			</g:Dock>
		</g:DockPanel>
	</g:SimplePanel>
	
</ui:UiBinder>