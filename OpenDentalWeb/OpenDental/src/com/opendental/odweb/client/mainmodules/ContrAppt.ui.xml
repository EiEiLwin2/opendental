<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
  	
  <ui:style>
  	
  	.pinBoardBackground {
			background-color: #e3e3e3;
		}
  	
  </ui:style>
  	
	<g:SimplePanel ui:field="panelContainer" >
		<g:DockPanel>
			<g:Dock direction="CENTER">
				<!-- Put the appointment schedule here. -->
				<g:SimplePanel ui:field="panelSchedule">
					<g:Image ui:field="imageApptSched" />
				</g:SimplePanel>
			</g:Dock>
			<g:Dock direction="EAST" size="300">
				<!-- Put the calendar and other searching tools here. -->
				<g:VerticalPanel>
					<dp:DatePicker ui:field="calendar" />
					<g:VerticalPanel width="100px" height="100px" styleName="{style.pinBoardBackground}" >
						<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
							<g:Label ui:field="pinBoard" width="100%" horizontalAlignment="CENTER">Appointments on the PinBoard</g:Label>
						</g:cell>
					</g:VerticalPanel>
					<g:Button ui:field="butMakeAppt">Make Appt</g:Button>
					<g:Button ui:field="butDelete">Delete</g:Button>
				</g:VerticalPanel>
			</g:Dock>
		</g:DockPanel>
	</g:SimplePanel>
	
</ui:UiBinder>