<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:s="urn:import:com.opendental.odweb.client.usercontrols"
  xmlns:m="urn:import:com.opendental.odweb.client.mainmodules" >
  
  <!-- This lets us edit the title bar resource from anywhere in the web app. -->
  <ui:with field='mainTitleResource' type='com.opendental.odweb.client.usercontrols.LabelMainTitle' />
  
  <!-- This will be the main CSS settings for the web app unless we make a more general file later. -->
  <ui:style>
  	.titleBar {
      /* padding: 0 10px; */
      background-color: #e8e8e8;
      border-bottom: 1px solid #bbbbbb;
	}
	
	.mainMenuBar {
      background-color: #e8eeee;
      /* border-bottom: 1px solid #3c756e; */
	}
	
	.patientMenuBar {
      background-color: #e8eeee;
      /* border-top: 1px solid #3c756e; */
      border-bottom: 1px solid #bbbbbb;
	}
	
	.moduleList {
	  background-color: #f0f0f0;
		border-top: 1px solid #bbbbbb;
		border-right: 1px solid #bbbbbb;
	}
    
	.moduleContent {
	  background-color: #d7dde8;
	  /* border-right: 1px solid #3c756e; */
	}
	
	.styleModuleStandard {
	
	}
	
	.styleModuleSelected {
	
	}
	
  </ui:style>
  
  <!-- Use a DockLayoutPanel to lay out the entire main screen. -->
  <g:DockLayoutPanel unit='PT'>
    
    <!-- Title bar that contains the selected patient information. -->
    <g:north size='12'>
      <g:HTMLPanel styleName='{style.titleBar}'>
        <table ui:field='mainTitle' cellpadding='0' cellspacing='0'>
        	<td style="padding-left: 10px;"><s:LabelMainTitle ui:field='labelMainTitle' /></td>
        </table>
      </g:HTMLPanel>
    </g:north>

    <!-- Main Menu Bar. -->
    <g:north size='18'>
    	<s:MenuBarMain ui:field="mainMenu" />
    </g:north>

	<!-- Module buttons and the module content area. -->
    <g:center>
      <g:DockLayoutPanel unit='PX'>
        <!-- Modules Tree. -->
        <g:lineStart size='58'>
          <g:ScrollPanel styleName='{style.moduleList}'>
            <s:OutlookBar ui:field='outlookBar' />
          </g:ScrollPanel>
        </g:lineStart>

        <!-- Main content area. -->
        <g:center>
          <g:DockLayoutPanel unit='PT'>
          	<!-- This is where the menu bar with Select Patient, E-mail, etc. will be kept. -->
            <g:north size='17'>
              <g:FlowPanel ui:field='mainToolBarPanel' styleName='{style.patientMenuBar}'>
              	<m:WindowOpenDental.ToolBarMain ui:field='toolBarMain'/>
              </g:FlowPanel>
            </g:north>

			<!-- Module content area. -->
            <g:center>
              <g:SimpleLayoutPanel ui:field='contentPanel' />
            </g:center>
          </g:DockLayoutPanel>
        </g:center>
      </g:DockLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>







