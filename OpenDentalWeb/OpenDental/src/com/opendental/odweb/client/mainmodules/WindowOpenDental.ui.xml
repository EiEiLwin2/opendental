<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:s="urn:import:com.opendental.odweb.client.usercontrols"
  xmlns:m="urn:import:com.opendental.odweb.client.mainmodules" >
  
  <!-- This lets us edit the title bar resource from anywhere in the web app. -->
  <ui:with field='mainTitleResource' type='com.opendental.odweb.client.usercontrols.LabelMainTitle' />
  
  <!-- This will be the main CSS settings for the web app unless we make a more general file later. -->
  <ui:style>
  
	 	.titleBar {
	     /* padding: 0 10px; */
	     background-color: #e8e8e8;
	     border-bottom: 1px solid #bbbbbb;
		}
		
		.titleLabel {
			font-weight: bold;
			color: #666666;
		}
		
		.mainMenuBar {
	      background-color: #e8eeee;
	      /* border-bottom: 1px solid #3c756e; */
		}
		
		.patientMenuBar {
	      background-color: #e8eeee;
	      /* border-top: 1px solid #3c756e; */
	      border-bottom: 1px solid #bbbbbb;
		}
		
		.moduleList {
		  background-color: #f0f0f0;
			border-top: 1px solid #bbbbbb;
			border-right: 1px solid #bbbbbb;
		}
	    
		.moduleContent {
		  background-color: #d7dde8;
		  /* border-right: 1px solid #3c756e; */
		}
		
  </ui:style>
  
  <!-- Use a DockLayoutPanel to lay out the entire main screen. -->
  <g:DockLayoutPanel unit='PT'>
    <!-- Title bar that contains the selected patient information. -->
    <g:north size='12'>
      <g:HTMLPanel styleName='{style.titleBar}'>
        <table ui:field='mainTitle' cellpadding='0' cellspacing='0'>
        	<td style="padding-left: 10px;">
        		<s:LabelMainTitle ui:field='labelMainTitle' styleName="{style.titleLabel}" />
        	</td>
        </table>
      </g:HTMLPanel>
    </g:north>
    <!-- Main Menu Bar. -->
    <g:north size='18'>
    	<g:MenuBar>
    		<g:MenuItem ui:field="rootMenuItemLogOff" text="Log Off" />
    		<g:MenuItem ui:field="rootMenuItemFile" text="File">
    			<g:MenuBar vertical="true">
	    			<g:MenuItem ui:field="menuItemPassword" text="Change Password" />
	    			<g:MenuItem ui:field="menuItemExit" text="Exit" />
    			</g:MenuBar>
    		</g:MenuItem>
    		<g:MenuItem ui:field="rootMenuItemSetup" text="Setup">
    			<g:MenuBar vertical="true">
	    			<g:MenuItem ui:field="menuItemApptFieldDefs" text="Appt Field Defs" />
	    			<g:MenuItem ui:field="menuItemApptRules" text="Appt Rules" />
	    			<g:MenuItem ui:field="menuItemAutoCodes" text="Auto Codes" />
	    			<g:MenuItem ui:field="menuItemAutomation" text="Automation" />
	    			<g:MenuItem ui:field="menuItemAutoNotes" text="Auto Notes" />
	    			<g:MenuItem ui:field="menuItemClearinghouses" text="Clearinghouses" />
	    			<g:MenuItem ui:field="menuItemDataPath" text="Data Paths" />
	    			<g:MenuItem ui:field="menuItemDefinitions" text="Definitions" />
	    			<g:MenuItem ui:field="menuItemDisplayFields" text="Display Fields" />
	    			<g:MenuItem ui:field="menuItemFeeScheds" text="Fee Schedules" />
	    			<g:MenuItem ui:field="menuItemInsCats" text="Insurance Categories" />
	    			<g:MenuItem ui:field="menuItemInsFilingCodes" text="Insurance Filing Codes" />
	    			<g:MenuItem ui:field="menuItemLaboratories" text="Laboratories" />
	    			<g:MenuItem ui:field="menuItemMisc" text="Miscellaneous" />
	    			<g:MenuItem ui:field="menuItemModules" text="Modules" />
	    			<g:MenuItem ui:field="menuItemOperatories" text="Operatories" />
	    			<g:MenuItem ui:field="menuItemPatFieldDefs" text="Pat Field Defs" />
	    			<g:MenuItem ui:field="menuItemPayerIDs" text="Payer IDs" />
	    			<g:MenuItem ui:field="menuItemPractice" text="Practice" />
	    			<g:MenuItem ui:field="menuItemProblems" text="Problems" />
	    			<g:MenuItem ui:field="menuItemProcedureButtons" text="Procedure Buttons" />
	    			<g:MenuItem ui:field="menuItemLinks" text="Program Links" />
	    			<g:MenuItem ui:field="menuItemQuestions" text="Questionnaire" />
	    			<g:MenuItem ui:field="menuItemRecall" text="Recall" />
	    			<g:MenuItem ui:field="menuItemRecallTypes" text="RecallTypes" />
	    			<g:MenuItem ui:field="menuItemSecurity" text="Security" />
	    			<g:MenuItem ui:field="menuItemSched" text="Schedules" />
	    			<g:MenuItem ui:field="menuItemShowFeatures" text="Show Features" />
	    			<g:MenuItem ui:field="menuItemTimeCards" text="Time Cards" />
    			</g:MenuBar>
    		</g:MenuItem>
    		<g:MenuItem ui:field="rootMenuItemLists" text="Lists">
    			<g:MenuBar vertical="true">
	    			<g:MenuItem ui:field="menuItemProcCodes" text="Procedure Codes" />
	    			<g:MenuItemSeparator />
	    			<g:MenuItem ui:field="menuItemClinics" text="Clinics" />
	    			<g:MenuItem ui:field="menuItemContacts" text="Contacts" />
	    			<g:MenuItem ui:field="menuItemCounties" text="Counties" />
	    			<g:MenuItem ui:field="menuItemEmployees" text="Employees" />
	    			<g:MenuItem ui:field="menuItemEmployers" text="Employers" />
	    			<g:MenuItem ui:field="menuItemCarriers" text="Insurance Carriers" />
	    			<g:MenuItem ui:field="menuItemInsPlans" text="Insurance Plans" />
	    			<g:MenuItem ui:field="menuItemLabCases" text="Lab Cases" />
	    			<g:MenuItem ui:field="menuItemMedications" text="Medications" />
	    			<g:MenuItem ui:field="menuItemPharmacies" text="Pharmacies" />
	    			<g:MenuItem ui:field="menuItemProviders" text="Providers" />
	    			<g:MenuItem ui:field="menuItemPrescriptions" text="Prescriptions" />
	    			<g:MenuItem ui:field="menuItemReferrals" text="Referrals" />
	    			<g:MenuItem ui:field="menuItemSchools" text="Sites" />
	    			<g:MenuItem ui:field="menuItemZipCodes" text="Zip Codes" />
    			</g:MenuBar>
    		</g:MenuItem>
    		<g:MenuItem ui:field="rootMenuItemReports" text="Reports" />
    		<g:MenuItem ui:field="rootMenuItemTools" text="Tools">
    			<g:MenuBar vertical="true">
	    			<g:MenuItem ui:field="menuItemPrintScreen" text="Print Screen Tool" />
	    			<g:MenuItem text="Misc Tools">
	    				<g:MenuBar vertical="true">
	    					<g:MenuItem ui:field="menuItemTelephone" text="Telephone Numbers" />
	    					<g:MenuItem ui:field="menuItemMergePatients" text="Merge Patients" />
	    					<g:MenuItem ui:field="menuItemDuplicateBlockouts" text="Clear Duplicate Blackouts" />
	    					<g:MenuItem ui:field="menuItemShutdown" text="Shutdown All Workstations" />
	    				</g:MenuBar>
	    			</g:MenuItem>
	    			<g:MenuItemSeparator />
	    			<g:MenuItem ui:field="menuItemAging" text="Aging" />
	    			<g:MenuItem ui:field="menuItemAuditTrail" text="Audit Trail" />
	    			<g:MenuItem ui:field="menuItemBillingFinance" text="Shutdown All Workstations" />
	    			<g:MenuItem ui:field="menuItemDatabaseMaint" text="Database Maintenance" />
	    			<g:MenuItem ui:field="menuItemMobileSynch" text="Mobile and Patient Portal Synch" />
	    			<g:MenuItem ui:field="menuItemRepeatingCharges" text="Repeating Charges" />
	    			<g:MenuItem ui:field="menuItemWebForms" text="Web Forms" />
    			</g:MenuBar>
    		</g:MenuItem>
    		<g:MenuItem ui:field="rootMenuItemHelp" text="Help">
    			<g:MenuBar vertical="true">
	    			<g:MenuItem ui:field="menuItemRemote" text="Online Support" />
	    			<g:MenuItem ui:field="menuItemHelpContents" text="Online Help - Contents" />
	    			<g:MenuItem ui:field="menuItemHelpIndex" text="Online Help - Index" />
	    			<g:MenuItem ui:field="menuItemRequestFeatures" text="Request Features" />
	    			<g:MenuItem ui:field="menuItemUpdate" text="Update" />
    			</g:MenuBar>
    		</g:MenuItem>
    	</g:MenuBar>
    </g:north>
		<!-- Module buttons and the module content area. -->
    <g:center>
      <g:DockLayoutPanel unit='PX'>
        <!-- Modules Tree. -->
        <g:lineStart size='58'>
          <g:ScrollPanel styleName='{style.moduleList}'>
            <s:OutlookBar ui:field='outlookBar' />
          </g:ScrollPanel>
        </g:lineStart>
        <!-- Main content area. -->
        <g:center>
          <g:DockLayoutPanel unit='PT'>
          	<!-- This is where the menu bar with Select Patient, E-mail, etc. will be kept. -->
            <g:north size='17'>
              <g:FlowPanel ui:field='mainToolBarPanel' styleName='{style.patientMenuBar}'>
              	<g:MenuBar width="auto" animationEnabled="true">
              		<g:MenuItem ui:field="menuItemSelectPatient" text="Select Patient" />
              		<g:MenuItem ui:field="menuItemCommlog" text="Commlog" />
              	</g:MenuBar>
              </g:FlowPanel>
            </g:north>
						<!-- Module content area. -->
            <g:center>
              <g:SimpleLayoutPanel ui:field='contentPanel' />
            </g:center>
          </g:DockLayoutPanel>
        </g:center>
      </g:DockLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>







