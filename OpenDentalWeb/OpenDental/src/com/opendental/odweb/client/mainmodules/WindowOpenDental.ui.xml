<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:s="urn:import:com.opendental.odweb.client.usercontrols">
  
  <!-- This lets us edit the title bar resource from anywhere in the web app. -->
  <ui:with field='mainTitleResource' type='com.opendental.odweb.client.usercontrols.LabelMainTitle' />
  
  <!-- This will be the main CSS settings for the web app unless we make a more general file later. -->
  <ui:style>
  	.titleBar {
      padding: 0 10px;
      background-color: #d8e2e1;
      border-bottom: 1px solid #3c756e;
	}
	
	.menuBar {
      background-color: #e8eeee;
      border-bottom: 1px solid #3c756e;
      padding: 0px 10px;
	}
	
	.moduleList {
	  background-color: #3c756e;
	  border-right: 1px solid #d8e2e1;
	}
    
    .moduleContent {
      background-color: #d7dde8;
      border-right: 1px solid #3c756e;
    }
	
	.styleModuleStandard {
	
	}
	
	.styleModuleSelected {
	
	}
	
  </ui:style>
  
  <!-- Use a DockLayoutPanel to lay out the entire main screen. -->
  <g:DockLayoutPanel unit='PT'>
    
    <!-- Title bar that contains the selected patient information. -->
    <g:north size='25'>
      <g:HTMLPanel styleName='{style.titleBar}'>
        <table ui:field='mainTitle' cellpadding='0' cellspacing='0'>
        	<!-- Put the title bar widget here. -->
        </table>
      </g:HTMLPanel>
    </g:north>

    <!-- Main Menu Bar. -->
    <g:north size='15'>
      <g:HTMLPanel styleName='{style.menuBar}'>
        <table cellpadding='0' cellspacing='0' width='100%'>
          <tr>
            <td>
              <table cellpadding='0' cellspacing='0'>
              	<!-- Put the menu bar widget here. -->
              </table>
            </td>
          </tr>
        </table>
      </g:HTMLPanel>
    </g:north>

	<!-- Module buttons and the module content area. -->
    <g:center>
      <g:DockLayoutPanel unit='PX'>
        <!-- Modules Tree. -->
        <g:lineStart size='55'>
          <g:ScrollPanel styleName='{style.moduleList}'>
            <s:OutlookBar ui:field='outlookBar' />
          </g:ScrollPanel>
        </g:lineStart>

        <!-- Main content area. -->
        <g:center>
          <g:DockLayoutPanel unit='PT'>
          	<!-- This is where the menu bar with Select Patient, E-mail, etc. will be kept. -->
            <g:north size='20'>
              <g:FlowPanel ui:field='mainToolBar' styleName='{style.menuBar}'>
              	<!-- Put the tool bar main widget here. -->
              </g:FlowPanel>
            </g:north>

			<!-- Module content area. -->
            <g:center>
              <g:SimpleLayoutPanel ui:field='contentPanel' />
            </g:center>
          </g:DockLayoutPanel>
        </g:center>
      </g:DockLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>