<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:s="urn:import:com.opendental.odweb.client.usercontrols"
  xmlns:m="urn:import:com.opendental.odweb.client.mainmodules" >

	<ui:style type="com.opendental.odweb.client.usercontrols.OutlookButton.ButtonStyle">
	
		.labelText {
			font-weight: bold;
			color: #666666;
		}

		.buttonStandard {
			border-style: solid;
			border-width: 1px;
			border-color: #f0f0f0;
		}
		
		.buttonSelected {
			border-style: solid;
			border-width: 1px;
			border-color: #1c5180;
			background-color: #ffffff;
		}
		
		.buttonHover {
			border-style: solid;
			border-width: 1px;
			border-color: #1c5180;
		}
		
		.panelSpacing {
			padding-top: 3px;
			padding-bottom: 3px;
		}
		
	</ui:style>
	
	
	<g:DecoratorPanel ui:field="contentPanel" width="100%">
		<g:VerticalPanel width="100%" styleName="{style.panelSpacing}">
			<g:Label ui:field="labelText" width="100%" horizontalAlignment="CENTER" styleName="{style.labelText}"/>
		</g:VerticalPanel>
	</g:DecoratorPanel>
	
</ui:UiBinder>
	